{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <table border="1" class="table table-bordered table-responsive-md table-striped text-center">
            <thead>
            <tr>
                <th class="titre-tab">Nom</th>
                <th class="titre-tab">Prénom</th>
                <th class="titre-tab">Tarif</th>
            </tr>
            </thead>
{% for ticket in booking.tickets %}
            <tr>
                <td class="pt-3-half">{{ ticket.lastName }}</td>
                <td class="pt-3-half">{{ ticket.firstName }}</td>
                <td class="pt-3-half">{{ ticket.price }}</td>
            </tr>
{% endfor %}
        </table>
    <div class="form-row">
        <div class="col">
            <h4> Total à Payer : {{ booking.price }}</h4>
        </div>
        <div class="col">
            <input type="submit" class="btn btn-primary" value="Paiement">
            <input type="submit" class="btn btn-danger" value="Modifier">

        </div>



    </div>

{% endblock %}