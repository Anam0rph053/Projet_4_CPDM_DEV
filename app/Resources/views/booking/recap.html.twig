{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <table border="1" class="table table-bordered table-responsive-md table-striped text-center">
            <thead>
            <tr>
                <th class="titre-tab">Nom</th>
                <th class="titre-tab">Prénom</th>
                <th class="titre-tab">Tarif</th>
            </tr>
            </thead>

{% for ticket in booking.tickets %}

            <tr>
                <td class="pt-3-half">{{ ticket.lastName }}</td>
                <td class="pt-3-half">{{ ticket.firstName }}</td>
                <td class="pt-3-half">{{ ticket.price }} €</td>
            </tr>

{% endfor %}
        </table>
    <div class="form-row">
        <div class="col">
            <h4> Total à Payer : {{ booking.price }} € </h4>
        </div>
        <div class="col">
            <a id="btn" class="btn btn-danger"  href="{{path('info') }}">Modifier</a>
        </div>
            <div class="col-md-4 col-md-offset-2">
            <form action="" method="POST">
                <script
                        src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                        data-label="Paiement"
                        data-key="pk_test_0jbUolf1oNk1TiOAtKSzAEy3"
                        data-amount="{{ booking.price * 100 }}"
                        data-name="Billetterie du Louvre"
                        data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
                        data-locale="auto"
                        data-currency="eur"
                        data-zip-code="true"
                        data-email="{{ booking.email }}">
                </script>
            </form>
            </div>


        </div>
    </div>

{% endblock %}